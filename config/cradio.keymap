#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick_tap_ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
        lm: leftthumb_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "LEFTTHUMB_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick_tap_ms = <0>;
            flavor = "tap-preferred";
            bindings = <&mo>, <&kp>;
        };
        rm: rightthumb_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "RIGHTTHUMB_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick_tap_ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&to>;
        };
    };

    keymap {
        compatible = "zmk,keymap";
        0 {
            bindings = <
            &kp Q       &kp W       &kp E       &kp R       &kp T       &kp Y       &kp U       &kp I       &kp O       &kp P
            &kp A       &kp S       &kp D       &kp F       &kp G       &kp H       &kp J       &kp K       &kp L       &kp SEMI
            &kp Z       &kp X       &kp C       &kp V       &kp B       &kp N       &kp M       &kp COMMA   &kp DOT     &kp FSLH
                                                &lm 4 SPACE &kp LSHFT   &rm LALT 2  &rm LCTRL 1
            >;
        };

        1 {
            bindings = <
            &kp EXCL    &kp AT      &kp HASH    &kp DLLR    &kp PRCNT   &kp CARET   &kp AMPS    &kp STAR    &kp PLUS    &kp EQUAL
            &kp PIPE2   &none       &none       &none       &kp LPAR    &kp RPAR    &none       &kp UNDER   &kp AT      &kp TILDE2
            &kp NUBS    &kp GRAVE   &none       &kp LBRC    &kp LBKT    &kp RBKT    &kp RBRC    &kp MINUS   &kp SQT     &kp NUHS
                                                &to 0       &trans      &trans      &trans
            >;
        };

        2 {
            bindings = <
            &kp ESC     &none       &none       &none      &kp KP_MINUS &kp KP_PLUS &kp KP_N7   &kp KP_N8   &kp KP_N9   &kp BSPC
            &kp TAB     &to 3       &none       &none   &kp KP_MULTIPLY &kp KP_DOT  &kp KP_N4   &kp KP_N5   &kp KP_N6   &kp RET
            &none       &none       &none       &none      &kp KP_SLASH &kp KP_N0   &kp KP_N1   &kp KP_N2   &kp KP_N3   &kp RSHFT
                                                &to 0       &trans      &trans      &trans
            >;
        };

        3 {
            bindings = <
            &kp ESC     &bt BT_CLR  &bt BT_SEL 0 &bt BT_SEL 2 &bt BT_SEL 3 &kp F1      &kp F2      &kp F3      &kp F4      &kp BSPC
            &kp TAB     &none       &none       &none       &none       &kp F5      &kp F6      &kp F7      &kp F8      &kp RET
            &none       &none       &none       &none       &none       &kp F9      &kp F10     &kp F11     &kp F12     &kp RSHFT
                                                &to 0       &trans      &trans      &trans
            >;
        };

        4 {
            bindings = <
            &kp ESC     &kp CAPS    &none       &none       &none       &none       &none       &kp INS     &kp DEL     &kp BSPC
            &kp TAB     &none       &none       &none       &none       &kp PG_UP   &kp HOME    &kp UP      &kp END     &kp RET
            &kp LSHFT   &kp LCTRL   &kp LGUI    &kp LALT    &none       &kp PG_DN   &kp LEFT    &kp DOWN    &kp RIGHT   &kp RSHFT
                                                &none       &trans      &trans      &trans
            >;
        };
    };
};